config BR2_PACKAGE_MPPA_DMA
	bool "mppa-dma"
	depends on BR2_kvx
	depends on BR2_PACKAGE_MACHINE_HEADERS
	help
		MPPA dma library

config BR2_MPPA_DMA_CUSTOM_TARBALL
	bool "Custom mppa-dma tarball"
	depends on BR2_PACKAGE_MPPA_DMA
	help
	  This option allows to specify a URL pointing to a mppa-dma
	  source tarball. This URL can use any protocol recognized by
	  Buildroot, like http://, ftp://, file:// or scp://.

	  When pointing to a local tarball using file://, you may want
	  to use a make variable like $(TOPDIR) to reference the root of
	  the Buildroot tree.

config BR2_MPPA_DMA_CUSTOM_TARBALL_LOCATION
	string "URL of custom mppa-dma tarball"
	depends on BR2_MPPA_DMA_CUSTOM_TARBALL
