config BR2_PACKAGE_NVMEM
	bool "nvmem"
	help
	  nvmem utility that can read and dump content from otp

config BR2_NVMEM_CUSTOM_TARBALL
	bool "Custom NVMEM tarball"
	depends on BR2_PACKAGE_ODP
	help
	  This option allows to specify a URL pointing to a kvx firmware
	  source tarball. This URL can use any protocol recognized by
	  Buildroot, like http://, ftp://, file:// or scp://.

	  When pointing to a local tarball using file://, you may want
	  to use a make variable like $(TOPDIR) to reference the root of
	  the Buildroot tree.

config BR2_NVMEM_CUSTOM_TARBALL_LOCATION
	string "URL of custom NVMEM tarball"
	depends on BR2_NVMEM_CUSTOM_TARBALL
