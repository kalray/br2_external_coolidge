config BR2_PACKAGE_L2_FIRMWARE
	bool "l2-firmware"
	depends on BR2_kvx
	depends on BR2_LINUX_KERNEL
	help
		Coolidge Linux L2 cache firmware

config BR2_L2_FIRMWARE_COMPILE_FROM_SOURCE
	bool "Compile L2 firmware from source"
	depends on BR2_PACKAGE_L2_FIRMWARE
	help
	  This option allows to compile the L2 firmware from source.

config BR2_L2_FIRMWARE_CUSTOM_TARBALL
	bool "Custom kvx l2 cache firmware tarball"
	depends on BR2_PACKAGE_L2_FIRMWARE
	help
	  This option allows to specify a URL pointing to a kvx l2 cache
	  firmware source tarball. This URL can use any protocol recognized by
	  Buildroot, like http://, ftp://, file:// or scp://.

	  When pointing to a local tarball using file://, you may want
	  to use a make variable like $(TOPDIR) to reference the root of
	  the Buildroot tree.

config BR2_L2_FIRMWARE_CUSTOM_TARBALL_LOCATION
	string "URL of custom kvx l2 cache firmware tarball"
	depends on BR2_L2_FIRMWARE_CUSTOM_TARBALL
