config BR2_PACKAGE_OFFLOAD_DAEMON
	bool "offload-daemon"
	depends on BR2_kvx
	depends on BR2_PACKAGE_KALRAY_MAKEFILE
	select BR2_PACKAGE_MPPA_RPROC
	select BR2_PACKAGE_LIBEVENT
	select BR2_PACKAGE_LIBDAEMON
	select BR2_PACKAGE_JSON_C
	help
		Offload daemon for mppa-offload

config BR2_OFFLOAD_DAEMON_CUSTOM_TARBALL
	bool "Custom offload-daemon tarball"
	depends on BR2_PACKAGE_OFFLOAD_DAEMON
	help
	  This option allows to specify a URL pointing to a offload-daemon
	  source tarball. This URL can use any protocol recognized by
	  Buildroot, like http://, ftp://, file:// or scp://.

	  When pointing to a local tarball using file://, you may want
	  to use a make variable like $(TOPDIR) to reference the root of
	  the Buildroot tree.

config BR2_OFFLOAD_DAEMON_CUSTOM_TARBALL_LOCATION
	string "URL of custom offload-daemon tarball"
	depends on BR2_OFFLOAD_DAEMON_CUSTOM_TARBALL
