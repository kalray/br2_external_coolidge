config BR2_PACKAGE_DMA_FIRMWARE
	bool "dma-firmware"
	depends on BR2_kvx
	depends on BR2_LINUX_KERNEL
	help
		Coolidge Linux L2 cache firmware

config BR2_DMA_FIRMWARE_CUSTOM_TARBALL
	bool "Custom kvx dma firmware tarball"
	depends on BR2_PACKAGE_DMA_FIRMWARE
	help
	  This option allows to specify a URL pointing to a kvx dma
	  firmware source tarball. This URL can use any protocol recognized by
	  Buildroot, like http://, ftp://, file:// or scp://.

	  When pointing to a local tarball using file://, you may want
	  to use a make variable like $(TOPDIR) to reference the root of
	  the Buildroot tree.

config BR2_DMA_FIRMWARE_CUSTOM_TARBALL_LOCATION
	string "URL of custom kvx dma firmware tarball"
	depends on BR2_DMA_FIRMWARE_CUSTOM_TARBALL
