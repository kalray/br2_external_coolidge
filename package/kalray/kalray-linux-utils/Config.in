config BR2_PACKAGE_KALRAY_LINUX_UTILS
	bool "kalray-linux-utils"
	depends on BR2_kvx
	depends on BR2_PACKAGE_KALRAY_MAKEFILE
	select BR2_PACKAGE_DTC
	help
	  Kalray Linux utilitary tools. This contains various
	  scripts and binaries for kalray platforms.

config BR2_KALRAY_LINUX_UTILS_CUSTOM_TARBALL
	bool "Custom kalray-linux-utils tarball"
	depends on BR2_PACKAGE_KALRAY_LINUX_UTILS
	help
	  This option allows to specify a URL pointing to a kalray-linux-utils
	  source tarball. This URL can use any protocol recognized by
	  Buildroot, like http://, ftp://, file:// or scp://.

	  When pointing to a local tarball using file://, you may want
	  to use a make variable like $(TOPDIR) to reference the root of
	  the Buildroot tree.

config BR2_KALRAY_LINUX_UTILS_CUSTOM_TARBALL_LOCATION
	string "URL of custom kalray-linux-utils tarball"
	depends on BR2_KALRAY_LINUX_UTILS_CUSTOM_TARBALL
